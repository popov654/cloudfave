{
  "manifest_version": 3,
  "name": "CloudFave",
  "description": "Syncs all you bookmarks across devices",
  
  "version": "1.1.0",

  "icons": {
      "128": "icons/icon128.png",
      "64": "icons/icon64.png",
      "48": "icons/icon48.png"
  },
  "background": {
      "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://cloudfave.ext.io/oauth/*",
        "*://cloudfave.ext.io/setpassword*",
        "*://cloudfave.org/oauth/*",
        "*://cloudfave.org/setpassword*"
      ],
      "js": [ "js/oauth_inject.js" ]
    }
  ],
  "options_page": "options.html",
  "options_ui": {
      "open_in_tab": true,
      "page": "options.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "alarms"
  ],
  "host_permissions": [
    "*://localhost/*",
    "*://cloudfave.ext.io/*",
    "*://cloudfave.org/*"
  ],

  "action": {
      "default_title": "CloudFave",
      "default_icon": "icons/icon64.png",
      "default_popup": "popup.html"
  }

}