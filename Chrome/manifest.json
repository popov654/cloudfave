{
  "manifest_version": 2,
  "name": "CloudFave",
  "version": "1.0.0",

  "icons": {
      "128": "icons/icon128.png",
      "64": "icons/icon64.png",
      "48": "icons/icon48.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "*://localhost/*",
    "*://api.cloudfave.com/*"
  ],

  "browser_action": {
      "default_title": "CloudFave",
      "default_icon": "icons/icon64.png",
      "default_popup": "popup.html"
  }

}